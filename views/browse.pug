extends layout

block content

    div(class="jumbotron")
        h1(class="display-4 text-center pb-3") Words. Gotta browse 'em all.

    //- RESULTS TABLE
    div(class="row")
        div(class="col-sm-12 col-md-9 input-group p-3 mx-auto")
            table(class="table table-hover")
                thead
                    tr
                        th(scope="col", style="width: 30%") Word
                        th(scope="col", style="width: 70%") Definition
                tbody
                    each word in words
                        tr
                            td
                                a(href=word.url) #{word.word}
                            td #{word.definitions[0]}

    //- PAGINATION
    nav(aria-label="...")
        ul(class="pagination justify-content-center")
            if previousPage
                li(class="page-item")
                    a(class="page-link", href=`/browse?page=${previousPage}`, aria-label="Previous")
                        span(aria-hidden="true") &laquo;
                        span(class="sr-only") Previous
                li(class="page-item"): a(class="page-link", href=`/browse?page=${previousPage}`) #{previousPage}
            
            li(class="page-item disabled"): a(class="page-link") #{currentPage}
            
            if nextPage
                li(class="page-item"): a(class="page-link", href=`/browse?page=${nextPage}`) #{nextPage}
                li(class="page-item")
                    a(class="page-link", href=`/browse?page=${nextPage}`, aria-label="Next")
                        span(aria-hidden="true") &raquo;
                        span(class="sr-only") Next
